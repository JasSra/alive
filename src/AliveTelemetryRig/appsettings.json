{
  "Telemetry": {
    "ServiceName": "AliveTelemetryRig",
    "ServiceVersion": "1.0.0",
    "Environment": "development",
    "Otlp": {
      "Endpoint": "http://localhost:3001/api/ingest/otlp",
      "Protocol": "HttpProtobuf",
      "TimeoutSeconds": 10
    },
    "Features": {
      "TracingEnabled": true,
      "MetricsEnabled": true,
      "LoggingEnabled": true,
      "SerilogOtlpSinkEnabled": true
    },
    "Metrics": {
      "ExportIntervalSeconds": 5,
      "EnableRuntimeInstrumentation": true,
      "EnableProcessInstrumentation": true,
      "EnableAspNetCoreInstrumentation": true,
      "EnableHttpClientInstrumentation": true,
      "CustomMeters": ["AliveTelemetryRig.*"]
    },
    "Tracing": {
      "SamplingRatio": 1.0,
      "EnableHttpInstrumentation": true,
      "EnableAspNetCoreInstrumentation": true,
      "EnableRedisInstrumentation": true,
      "EnableSqlClientInstrumentation": true
    },
    "ResourceAttributes": {
      "service.namespace": "alive",
      "service.instance.id": "rig-local"
    }
  }
}
